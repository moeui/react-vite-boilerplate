.login
    margin: 180px auto
    width: 350px
    padding: 35px 35px 15px
    box-shadow: 0 0 25px #cac6c6
    border: 1px solid #eaeaea
    border-radius: 5px

    .btnWrap
        display: flex

        .btn
            text-align: center
            background-color: #1890ff
            border-radius: 5px
            color: #fff
            cursor: pointer
            flex: 1

            &:focus, &:hover
                background: #4db3ff

            &:active
                background: #1d90e6